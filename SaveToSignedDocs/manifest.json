{
	"manifest_version": 2,

	"name": "SaveToSignedDocs",
	"description": "add to the context menu and keybindings to send tabs to groups of windows",
	"version": "0.1.0",

	"homepage_url": "https://github.com/duncantl/SaveToSignedDocs",

	"permissions": [
	    "contextMenus",
	    "tabs",
	    "downloads",
	    "downloads.open",
	    "nativeMessaging",
	    "<all_urls>", // for content-disposition as is scripting.
//	    "activeTab", 
	    "scripting"  
	],

       "content_scripts": [
           {  "matches": [ "https://mail.google.com/mail/" ],
	      "js": ["head.js"] 
	   }
       ],


       "background": { 
           "scripts": ["head.js", "background.js"],
	   "persistent": true
       },

      "commands": {
	  "mostRecent": {
	      "suggested_key": {
		  "default": "MacCtrl+D"
	      }
	  }
      }


//,       "icon": 

}
